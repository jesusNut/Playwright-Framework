{
  "name": "playwright_cub_framework",
  "version": "1.0.0",
  "description": "Playwright framework Skeleton",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc --incremental -p tsconfig.json",
    "postbuild": "tsc --build --clean",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "format": "npx prettier . --check",
    "format:fix": "npx prettier . --write",
    "prepare": "husky",
    "clean:reports": "rimraf allure-report allure-results && mkdirp allure-report allure-results",
    "generate:reports": "npx allure generate ./allure-results --clean",
    "open:reports": "npx allure open ./allure-report",
    "pretest": "npm run clean:reports",
    "posttest": "npm run generate:reports && npm run open:reports",
    "posttest-ci": "npm run generate:reports",
    "setenv:qa": "cross-env NODE_ENV=qa",
    "setenv:uat": "cross-env NODE_ENV=uat",
    "execute:OnChromium": "npx playwright test --project chromium",
    "execute:OnFirefox": "npx playwright test --project firefox",
    "execute:serial": "npx playwright test --workers=1 --project chromium",
    "execute:OnChromiumOnQa": "cross-env NODE_ENV=qa npx playwright test --project chromium",
    "execute:OnFirefoxOnQa": "cross-env NODE_ENV=qa npx playwright test --project firefox",
    "execute:SmokeOnChromiumOnQa": "cross-env NODE_ENV=qa npx playwright test --project chromium --grep '@smoke'",
    "execute:RegressionOnChromiumOnQa": "cross-env NODE_ENV=qa npx playwright test --project chromium --grep '@regression'",
    "test:chromium": "npm-run-all --continue-on-error pretest execute:OnChromium posttest",
    "test:firefox": "npm-run-all --continue-on-error pretest execute:OnFirefox posttest",
    "test:serial": "npm-run-all --continue-on-error pretest execute:serial posttest",
    "test:chromium-qa": "npm-run-all --continue-on-error pretest execute:OnChromiumOnQa posttest",
    "test:firefox-qa": "npm-run-all --continue-on-error pretest execute:OnFirefoxOnQa posttest",
    "test:chromium-qa-smoke": "npm-run-all --continue-on-error pretest execute:SmokeOnChromiumOnQa posttest",
    "test:chromium-qa-regression": "npm-run-all --continue-on-error pretest execute:RegressionOnChromiumOnQa posttest"
  },
  "author": "Jesusnut",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@playwright/test": "^1.44.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "allure-playwright": "^2.15.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^1.6.0",
    "globals": "^15.1.0",
    "husky": "^9.0.11",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "crypto-js": "^4.2.0",
    "csv-parse": "^5.5.5",
    "csv-writer": "^1.6.0",
    "csvtojson": "^2.0.10",
    "dotenv": "^16.4.5"
  }
}
